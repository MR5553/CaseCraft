{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "useUnknownInCatchVariables": false,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["node_modules"]
}